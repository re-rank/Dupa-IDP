{
  "name": "project-atlas",
  "version": "0.1.0",
  "description": "Automated code structure analysis and visualization tool",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/re-rank/Dupa-IDP.git"
  },
  "bugs": {
    "url": "https://github.com/re-rank/Dupa-IDP/issues"
  },
  "homepage": "https://github.com/re-rank/Dupa-IDP#readme",
  "scripts": {
    "dev": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run test:backend\" \"npm run test:frontend\"",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:watch": "concurrently -n \"backend,frontend\" \"npm run test:backend -- --watch\" \"npm run test:frontend -- --watch\"",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "npm run lint:backend -- --fix && npm run lint:frontend -- --fix",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd backend && rimraf dist node_modules",
    "clean:frontend": "cd frontend && rimraf dist node_modules",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "keywords": [
    "code-analysis",
    "visualization",
    "architecture",
    "dependencies",
    "microservices"
  ],
  "author": "Project Atlas Team",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "rimraf": "^5.0.5"
  },
  "lint-staged": {
    "backend/src/**/*.{ts,tsx}": [
      "cd backend && npm run lint:fix",
      "cd backend && npm test -- --findRelatedTests"
    ],
    "frontend/src/**/*.{ts,tsx,js,jsx}": [
      "cd frontend && npm run lint:fix",
      "cd frontend && npm test -- --findRelatedTests"
    ]
  },
  "workspaces": [
    "backend",
    "frontend"
  ]
}